#include<iostream>#include<fstream>#include<time.h>#include<windows.h>using namespace std;void atm();void menu();ofstream file("new.txt");int main(){	menu();}     //Card No=1020304050     //pin code=1122void menu(){	system("color c");	int a,b,c,d;	fstream dat;	dat.open("data.txt",ios::in);	dat>>a>>b;	cout<<"Enter Card Number: "<<endl;	cin>>c;	while(!dat.eof()){		if(c==a){			for(int e=1;e<=3;e++){			cout<<"Enter Pin"<<endl;			cin>>d;			cout<<"Invalid Pin"<<endl;			file<<"Login Failed"<<__DATE__<<__TIME__<<endl;			if(b==d)			break;						}						 if(b!=d){			 	system("cls");			 	cout<<"System Closed";			 	exit(1);			 }			else if(b==d)					        atm();	        	        break;									}		}	}void atm(){	system("cls");		cout<<"Login Successfully"<<endl;	file<<"Login Passed at "<<__DATE__<<__TIME__<<endl;	int option;	int balance=1000,deposite,withdraw,transfer;	do{	system("Color A");		cout<<"\n\t\t\t***********| MENU |****************";	cout<<"\n\t\t\t*                                 *";	cout<<"\n\t\t\t*         [1]. Check Balance      *";	cout<<"\n\t\t\t*         [2]. Deposit            *";	cout<<"\n\t\t\t*         [3]. Withdraw           *";	cout<<"\n\t\t\t*         [4]. Transfer           *";	cout<<"\n\t\t\t*         [5]. Return to Menu     *";	cout<<"\n\t\t\t*         [6]. Exit               *";    cout<<"\n\t\t\t**********************************";    cout<<"\n\t  Choose an Option: ";    cin>>option;    system("cls");    switch(option){    	case 1:    		cout<<"\n\t Your Balance is: $ "<<balance<<endl;    		file<<"\nCurrent Balance: "<<balance<<endl;    		break;    	case 2:		    cout<<"\n\t Amount your want to Despoit: $ ";		    cin>>deposite;		    file<<"Desposite Amount: "<<deposite<<endl;		    balance=balance+deposite;		    cout<<"\n\t Current Balance is: $ "<<balance<<endl;		    		    break;		case 3:		    cout<<"\n\t Amount your want to Withdraw: $ ";		    cin>>withdraw;		    file<<"Withdraw Amount: "<<withdraw<<endl;		    balance=balance-withdraw;		    cout<<"\n\t Available Balance is: $ "<<balance<<endl;		    break;		case 4:			if(balance<=0){				cout<<"No Balance Available";				break;			}			else{			cout<<"\n\t Amount your want to Transfer: $ ";		    cin>>transfer;		    file<<"Transfer Amount: "<<transfer<<"\t"<<endl;		    balance=balance-transfer;		    cout<<"\n\t Current Balance is: $ "<<balance<<endl;		    break;		    }		case 5:			atm();		case 6:			break;		default:			cout<<"Invalid Input"<<endl;			break;	}}while(option!=6);
}
